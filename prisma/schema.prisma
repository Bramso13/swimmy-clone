generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PoolLocation {
  INDOOR
  OUTDOOR
}

model User {
  id            String        @id @default(uuid())
  email         String        @unique

  name          String?
  avatarUrl     String?
  role          String        @default("tenant") // 'tenant' ou 'owner'
  mangopayId    String?
  walletId      String?
  pools         Pool[]        @relation("OwnerPools")
  reservations  Reservation[]
  transactions  Transaction[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  emailVerified Boolean
  image         String?
  sessions      Session[]
  accounts      Account[]
  availabilityRequests AvailabilityRequest[]
  poolApprovalRequests PoolApprovalRequest[]
  messagesSent   Message[]   @relation("MessagesSent")
  messagesReceived Message[]  @relation("MessagesReceived")
  favorites     Favorite[]

  @@map("user")
}
model Annonce {
  id String @id @default(uuid())
  title String
  description String
  pricePerHour Float
  availability Json
 
}

model Pool {
  id           String        @id @default(uuid())
  title        String
  description  String
  address      String
  latitude     Float
  longitude    Float
  photos       String[]
  pricePerHour Float
  availability Json
  // Flag de disponibilité générale de l'annonce
  isAvailable  Boolean       @default(true)
  // New metadata fields
  rules        String[]     @default([])
  extras       Json?
  additional   Json?
  // Intérieur ou extérieur (par défaut: extérieur)
  location     PoolLocation  @default(OUTDOOR)
  owner        User?         @relation("OwnerPools", fields: [ownerId], references: [id])
  ownerId      String?
  reservations Reservation[]
  availabilityRequests AvailabilityRequest[]
  approvalRequests PoolApprovalRequest[]
  approved    Boolean       @default(false)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  favorites    Favorite[]
}

model Reservation {
  id          String       @id @default(uuid())
  pool        Pool         @relation(fields: [poolId], references: [id])
  poolId      String
  user        User         @relation(fields: [userId], references: [id])
  userId      String
  startDate   DateTime
  endDate     DateTime
  amount      Float
  status      String // 'pending', 'paid', 'cancelled', etc.
  transaction Transaction?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

// Demandes de disponibilité soumises par les locataires pour qu'un owner confirme
model AvailabilityRequest {
  id         String   @id @default(uuid())
  pool       Pool     @relation(fields: [poolId], references: [id])
  poolId     String
  // optionnel: qui a fait la demande
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?
  date       DateTime
  startTime  String
  endTime    String
  adults     Int      @default(1)
  children   Int      @default(0)
  babies     Int      @default(0)
  status     String   @default("pending") // 'pending' | 'approved' | 'rejected'
  createdAt  DateTime @default(now())
  messages   Message[]
}

// Demande d'approbation d'une nouvelle piscine (créée par un tenant)
model PoolApprovalRequest {
  id          String   @id @default(uuid())
  pool        Pool?    @relation(fields: [poolId], references: [id])
  poolId      String?
  requester   User?    @relation(fields: [requesterId], references: [id])
  requesterId String?
  status      String   @default("pending") // pending | approved | rejected
  createdAt   DateTime @default(now())
  // Données de la piscine proposée (snapshot)
  title        String?
  description  String?
  address      String?
  latitude     Float?
  longitude    Float?
  photos       String[]   @default([])
  pricePerHour Float?
  availability Json?
  rules        String[]   @default([])
  additional   Json?
}

model Transaction {
  id            String      @id @default(uuid())
  reservation   Reservation @relation(fields: [reservationId], references: [id])
  reservationId String      @unique
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  mangopayId    String?
  status        String // 'pending', 'succeeded', 'failed', etc.
  amount        Float
  createdAt     DateTime    @default(now())
}

model Message {
  id           String   @id @default(uuid())
  sender       User     @relation("MessagesSent", fields: [senderId], references: [id])
  senderId     String
  recipient    User     @relation("MessagesReceived", fields: [recipientId], references: [id])
  recipientId  String
  content      String
  // optionnel: rattacher à une demande de dispo
  availabilityRequest AvailabilityRequest? @relation(fields: [availabilityRequestId], references: [id])
  availabilityRequestId String?
  createdAt    DateTime @default(now())
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Favorite {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  pool      Pool     @relation(fields: [poolId], references: [id], onDelete: Cascade)
  poolId    String
  createdAt DateTime @default(now())

  @@unique([userId, poolId])
  @@map("favorite")
}

